<div class="center">
  <div class="container">
    <h1 class="text-light"><%= @task.title %></h1>

    <div class="form-group">
    <%= form_for(@task) do |f| %>
      <%= f.label :title, class: 'text-light' %>
      <%= f.text_field :title, class: 'form-control mb-3' %>

      <%= f.label :details, class: 'text-light' %>
      <%= f.text_field :details, class: 'form-control mb-3' %>

      <%= f.label :mark_as_completed, class: 'text-light' %>
      <%= f.check_box :completed, class: 'form-control mb-3' %>

      <%= f.label :mark_as_progress, class: 'text-light' %>
      <%= f.check_box :progress, class: 'form-control mb-3' %>

      <%= f.submit class: 'btn btn-outline-light' %>
    <% end %>
    </div>
  </div>
</div>
